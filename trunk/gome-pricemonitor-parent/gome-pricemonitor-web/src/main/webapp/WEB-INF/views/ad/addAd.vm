<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>GomeCloudMageagement</title>
    <meta http-equiv = "X-UA-Compatible" content = "IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.2 -->
    <link href="../bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- FontAwesome 4.3.0 -->
    <link href="../libs/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="../libs/css/AdminLTE.min.css"rel="stylesheet" type="text/css" />
    <link href="../libs/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <link href="../css/style.css" rel="stylesheet" type="text/css"/>
    <!--[if lt IE 9]>
    <script src="../libs/js/html5shiv.js" type="text/javascript"></script>
    <script src="../libs/js/respond.js" type="text/javascript"></script>
    <![endif]-->
</head>
<body class="skin-blue">
<div class="wrapper">
    #parse("common/header.vm")
    #parse("common/leftMenu.vm")
    <!-- Content Wrapper. Contains page content  *********************************************************************************************-->
    <div class="content-wrapper">
    	<!-- 用于控制左侧菜单默认选中 -->
    	<label id="moduleName" style="display:none">广告列表</label>
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h2>广告管理</h2>
            <div class="BreadcrumbTrail">
                <a class="cc link" href="../ad/toAdListView">广告列表</a>
                <i>&gt;</i>
                <a class="cc link" href="javascript:void(0);">添加广告</a>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <form action="" class="form form-horizontal addProduct_form">
                    <div class="form-group">
                        <label for="" class="control-label">频道名称</label><strong>*</strong>
                        <select id="channelId" name="channelId" class="form-control dropdown-select add_account_select">
                        	<option value="">请选择频道</option>
                        	#foreach($channel in $channelList)
                        	#if($!channel.isFull == 1)
                            <option value="$!channel.id" disabled="disabled">$!channel.channelName 【已满】</option>
                            #else
                            <option value="$!channel.id">$!channel.channelName</option>
							#end
							#end
                        </select>
                        <span id="channelIdErrorSpan" class=""></span>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">位置</label><strong>*</strong>
                        <select id="sort" name="sort" class="form-control dropdown-select add_account_select">
                        	<option value="">请选择位置</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <span id="sortErrorSpan" class=""></span>
                    </div>
					<div class="form-group">
                        <label for="" class="control-label">图片名称</label><strong>*</strong>
                        <input type="text" id="picName" name="picName" value="" placeholder="请输入4-16位的图片名称" maxlength="16" class="form-control"/>
                        <span id="picNameErrorSpan" class=""></span>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">上传图片</label><strong>*</strong>
                    	<div class="up_image">
                    		<img id="oneImage"  alt="点击上传图片" src='../image/upfire.png' onclick="iframeClick()" style="width:124px;height:160px;"/>
                    	</div>
						<input type="hidden" id="picPath" name="picPath" value="" />
						<iframe name="img" id="img" src="${rc.contextPath}/imageUpload/touploadimg" frameborder="0" height="0px"></iframe>
						<span id="picPathErrorSpan" class=""></span>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">wap链接地址</label><strong>*</strong>
                        <input type="text" id="links" name="links" value="" placeholder="请输入链接地址" maxlength="80" class="form-control"/>
                        <span id="linksErrorSpan" class=""></span>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">状态</label>
                        <div class="inline radio_warp">
                            <label class="inline">
                                <input type="radio" name="status" value="1" checked="checked">正常
                            </label>
                            <label class="inline">
                                <input type="radio" name="status" value="0">失效
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label nostrong-label">操作帐号</label>
                        <span class="from-span">$!operateUser</span>
                        <input type="hidden" id="operateUser" name="operateUser" value="$!operateUser" />
                    </div>
                    <div class="button_area">
                    	<input name="save_btn" type="button" class="user_submit" id="save_btn" tabindex="6" value="保存">
                        <a href="javascript:void(0);" class="return-btn">返回</a>
                    </div>
                </form>
            </div>
        </section><!-- Main content end -->
    </div><!-- /.content-wrapper *************************************************************************************************************-->
    #parse("common/footer.vm")
</div><!-- ./wrapper -->
#parse("common/messageBox.vm")

<!-- jQuery 2.1.3 -->
<script src="../plugins/jQuery/jquery-1.11.0.min.js"type="text/javascript"></script>
<!-- jQuery UI 1.11.2 -->
<script src="../plugins/jQueryUI/jquery-ui.min.js" type="text/javascript"></script>
<script src="../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- AdminLTE App -->
<script src="../libs/js/app.js" type="text/javascript"></script>
<script src="../js/left_menu.js" type="text/javascript"></script>
<script src="../js/messageBox.js" type="text/javascript"></script>
<script src="../js/upload.js" type="text/javascript"></script>
<script src="../js/addAd.js" type="text/javascript"></script>
<script src="../js/check.js" type="text/javascript"></script>
</body>
</html>