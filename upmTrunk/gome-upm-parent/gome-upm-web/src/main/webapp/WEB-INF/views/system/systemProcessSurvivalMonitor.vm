<div class="wrapper">

	<!-- header start-->
    #parse("common/header.vm")
    <!-- header end-->
    
    <!-- Left side column. contains the logo and sidebar -->
    #parse("common/leftMenu.vm")
    <!-- Left side end -->
	
    

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
		
		<!--每个页面引入-->
        #parse("common/flat-alarm.vm")
		
        <!-- Content Header (Page header) -->
        <section class="content-header">
        		<a href="${rc.contextPath}/index">统一监控平台 </a>
        		<a href="${rc.contextPath}/system/get">/ 系统进程存活监控</a>
        </section>

        <!-- Main content -->
        <section class="content">
        	<div class="topView">
        		<div class="health_panl fl">
        			<div><p class="health_txt fl">健康指数</p><p class="health_numP fl">$!heath</p></div>
        		</div><!--health_panl end-->
        		<div class="health_progress fl">
	        		<div class="progress" style="width: 100%;">
						<div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="78" style="width: $!heath%">
						  <span class="sr-only">35% Complete (success)</span>
					    </div>
				    </div><!--progress end-->	
					<p class="progress_txt">
						<span class="unusual">异常:<a href="${rc.contextPath}/system/warning"><strong>$!inValidCount</strong></a></span>
						<span class="usual">正常:<strong>$!validCount</strong></span> 
					</p>
        		
	        	
           </div>
        	</div>
        	<div class="toolbar" style="clear: both;">
                <h2 class="list_table_title" style="line-height: 140px;">系统进程存活监控列表</h2>
                <div class="btn_con fr" style="margin-bottom: 23px;">
                
                	<input type="text" onkeydown="quickSearch(event);" value="$!text"
                		class="form-control systemProcessSearchInput" id="search_name" placeholder="请输入应用名...">
                	<i id="btn_search" class="fa fa-search systemProcessSearchIcon"></i>
                </div>
            </div>
            <div class="list_table" style="margin-top: 10px;">
                #parse("system/systemTable.vm")
            </div>

        </section><!-- /.content -->
