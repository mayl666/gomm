<script src="../js/jQuery/jQuery-2.1.3.min.js" type="text/javascript"></script>
<script src="../js/business/alarmTable.js" type="text/javascript"></script>
<table id="example1" class="table table-striped table_data">
    <thead>
        <tr>
            <th>序号</th>
            <th>报警时间</th>
            <th>类型</th>
            <th>报警内容</th>
        </tr>
    </thead>
    <tbody>
    #if($!page.data.size() > 0)
    #set($i=($page.pageNo - 1) * $page.pageSize)
	#foreach($alarm in $page.data)
    <tr>
        #set($i=$!i + 1)
        <td>$!i</td>
        <td>$!alarm.sendTimeStr</td>
        <td>$!alarm.typeStr</td>
        <td><a href="javascript:void(0);" class="detail" url="${rc.contextPath}/alarm/detail?id=$!alarm.id" style="font-size:14px;color:#000;text-decoration:underline">查看详情</a></td>
    </tr>
    #end
	#else
	<tr><td colspan='4' align='center'>没有查到任何记录</td></tr>
	#end
    </tbody>
</table>
#if($!page.data.size() > 0)
#parse("common/pageToolbar.vm")
#end